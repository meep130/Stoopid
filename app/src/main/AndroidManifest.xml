<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.theamae.stoopid">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartupSplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KitchenGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShapeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SizeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MathActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ButtonActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GesturesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoadingSplashActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EndActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".MechanicsAcitivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".BallGameActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".BackgroundSoundService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ScoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RiddleActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>